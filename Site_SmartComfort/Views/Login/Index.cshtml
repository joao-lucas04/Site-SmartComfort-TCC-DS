@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/style.css">

<div class="login-container mx-auto">
    <div class="login-form">
        <h2>Login - Smart Comfort</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="EmailUsu">Email</label>
                <input type="text" id="EmailUsu" name="EmailUsu" required>
            </div>
            <div class="form-group">
                <label for="SenhaUsu">Senha</label>
                <input type="password" id="SenhaUsu" name="SenhaUsu" required>
            </div>
            <input type="submit" value="Login" class="submit-btn">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-2">@ViewBag.Message</div>
            }
        </form>
        <p>Não possui uma conta? <span class="signup-link" onclick="redirectToSignup()">Cadastre-se</span></p>
    </div>
</div>
